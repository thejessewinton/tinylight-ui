{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": ["node_modules", "dist", ".next", ".turbo"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "a11y": {
        "noSvgWithoutTitle": {
          "level": "off"
        },
        "noAutofocus": {
          "level": "off"
        },
        "useKeyWithClickEvents": {
          "level": "off"
        }
      },
      "style": {
        "useImportType": "warn",
        "noUnusedTemplateLiteral": {
          "level": "off"
        },
        "noNonNullAssertion": {
          "level": "off"
        },
        "noUselessElse": {
          "level": "off"
        }
      },
      "nursery": {
        "useSortedClasses": {
          "fix": "safe",
          "level": "warn",
          "options": {
            "attributes": ["className"]
          }
        }
      },
      "correctness": {
        "noUnusedVariables": {
          "level": "warn"
        },
        "noUnusedImports": {
          "level": "warn"
        }
      },
      "security": {
        "noDangerouslySetInnerHtml": {
          "level": "off"
        }
      },
      "suspicious": {
        "noArrayIndexKey": {
          "level": "off"
        }
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded"
    }
  }
}
